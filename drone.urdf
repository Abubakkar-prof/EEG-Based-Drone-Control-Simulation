<?xml version="1.0" ?>
<robot name="mavic_clone_geo">

  <material name="white">
    <color rgba="0.95 0.95 0.96 1.0"/>
  </material>
  
  <material name="dark_grey">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>

  <material name="black">
    <color rgba="0.05 0.05 0.05 1.0"/>
  </material>

  <material name="silver">
    <color rgba="0.8 0.8 0.85 1.0"/>
  </material>

  <material name="gold">
    <color rgba="0.85 0.7 0.2 1.0"/>
  </material>
  
  <material name="lens_glass">
    <color rgba="0.05 0.05 0.1 0.95"/>
  </material>

  <material name="led_green">
    <color rgba="0.0 1.0 0.0 1.0"/>
  </material>
  
  <material name="led_orange">
    <color rgba="1.0 0.4 0.0 1.0"/>
  </material>

  <!-- Base Link: The Fuselage -->
  <link name="base_link">
    <inertial>
      <mass value="0.9"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.02"/>
    </inertial>

    <!-- === MAIN BODY === -->
    <!-- Central Fuselage Box -->
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="0.32 0.13 0.08"/>
      </geometry>
      <material name="white"/>
    </visual>
    
    <!-- Top Shell (Aerodynamic Cover) -->
    <visual>
      <origin xyz="-0.02 0 0.044"/>
      <geometry>
        <box size="0.26 0.11 0.03"/>
      </geometry>
      <material name="white"/>
    </visual>
    
    <!-- Rear Battery Bulge -->
    <visual>
      <origin xyz="-0.12 0 0.044"/>
      <geometry>
        <box size="0.08 0.11 0.03"/>
      </geometry>
      <material name="dark_grey"/>
    </visual>
    
    <!-- Power Button -->
    <visual>
      <origin xyz="-0.08 0 0.06"/>
      <geometry>
        <cylinder length="0.004" radius="0.016"/>
      </geometry>
      <material name="black"/>
    </visual>

    <!-- Front Nose Geometry (sensor housing) -->
    <visual>
      <origin xyz="0.164 0 0.01"/>
      <geometry>
        <box size="0.02 0.08 0.04"/>
      </geometry>
      <material name="black"/>
    </visual>

    <!-- === ARMS === -->
    
    <!-- Front Right Arm -->
    <visual>
      <!-- Angled Outwards and Forward -->
      <origin rpy="0 0 -0.4" xyz="0.20 -0.18 0.02"/> 
      <geometry>
        <box size="0.24 0.05 0.036"/>
      </geometry>
      <material name="white"/>
    </visual>
    <!-- Connector to Body -->
    <visual>
      <origin rpy="0 0 -0.4" xyz="0.09 -0.08 0.02"/>
      <geometry>
         <box size="0.12 0.06 0.04"/>
      </geometry>
      <material name="white"/>
    </visual>

    <!-- Front Left Arm -->
    <visual>
      <origin rpy="0 0 0.4" xyz="0.20 0.18 0.02"/>
      <geometry>
        <box size="0.24 0.05 0.036"/>
      </geometry>
      <material name="white"/>
    </visual>
    <!-- Connector -->
    <visual>
      <origin rpy="0 0 0.4" xyz="0.09 0.08 0.02"/>
      <geometry>
         <box size="0.12 0.06 0.04"/>
      </geometry>
      <material name="white"/>
    </visual>

    <!-- Rear Right Arm -->
    <visual>
      <origin rpy="0 0 0.5" xyz="-0.20 -0.20 -0.03"/>
      <geometry>
        <box size="0.24 0.044 0.032"/>
      </geometry>
      <material name="white"/>
    </visual>
    <!-- Connector -->
    <visual>
      <origin rpy="0 0 0.5" xyz="-0.10 -0.09 -0.02"/>
      <geometry>
         <box size="0.10 0.05 0.04"/>
      </geometry>
      <material name="white"/>
    </visual>

    <!-- Rear Left Arm -->
    <visual>
      <origin rpy="0 0 -0.5" xyz="-0.20 0.20 -0.03"/>
      <geometry>
        <box size="0.24 0.044 0.032"/>
      </geometry>
      <material name="white"/>
    </visual>
    <!-- Connector -->
    <visual>
      <origin rpy="0 0 -0.5" xyz="-0.10 0.09 -0.02"/>
      <geometry>
         <box size="0.10 0.05 0.04"/>
      </geometry>
      <material name="white"/>
    </visual>


    <!-- === LANDING GEAR === -->
    <!-- Front Landing Legs (under motors) -->
    <visual>
      <origin xyz="0.28 -0.26 -0.08"/> <!-- Under Front Right Motor -->
      <geometry>
        <box size="0.03 0.03 0.1"/> <!-- Tapered leg look -->
      </geometry>
      <material name="white"/>
    </visual>
     <visual>
      <origin xyz="0.28 0.26 -0.08"/> <!-- Under Front Left Motor -->
      <geometry>
        <box size="0.03 0.03 0.1"/>
      </geometry>
      <material name="white"/>
    </visual>
    
    <!-- Rear Landing Nubs (on belly) -->
    <visual>
      <origin xyz="-0.12 0.04 -0.05"/>
      <geometry>
        <sphere radius="0.016"/>
      </geometry>
      <material name="black"/>
    </visual>
    <visual>
      <origin xyz="-0.12 -0.04 -0.05"/>
      <geometry>
        <sphere radius="0.016"/>
      </geometry>
      <material name="black"/>
    </visual>


    <!-- === MOTORS (Visuals) === -->
    <visual> <origin xyz="0.29 -0.27 0.05"/> <geometry><cylinder length="0.04" radius="0.032"/></geometry> <material name="silver"/> </visual> <!-- FR -->
    <visual> <origin xyz="0.29 0.27 0.05"/> <geometry><cylinder length="0.04" radius="0.032"/></geometry> <material name="silver"/> </visual>  <!-- FL -->
    <visual> <origin xyz="-0.29 -0.27 0"/> <geometry><cylinder length="0.04" radius="0.032"/></geometry> <material name="silver"/> </visual> <!-- RR -->
    <visual> <origin xyz="-0.29 0.27 0"/> <geometry><cylinder length="0.04" radius="0.032"/></geometry> <material name="silver"/> </visual>  <!-- RL -->
    <!-- Motor Bases (Black part under silver can) -->
    <visual> <origin xyz="0.29 -0.27 0.03"/> <geometry><cylinder length="0.02" radius="0.034"/></geometry> <material name="black"/> </visual>
    <visual> <origin xyz="0.29 0.27 0.03"/> <geometry><cylinder length="0.02" radius="0.034"/></geometry> <material name="black"/> </visual>
    <visual> <origin xyz="-0.29 -0.27 -0.02"/> <geometry><cylinder length="0.02" radius="0.034"/></geometry> <material name="black"/> </visual>
    <visual> <origin xyz="-0.29 0.27 -0.02"/> <geometry><cylinder length="0.02" radius="0.034"/></geometry> <material name="black"/> </visual>


    <!-- === GIMBAL & CAMERA (Front Mounted) === -->
    <!-- Gimbal Housing (in nose) -->
    <visual>
      <origin xyz="0.18 0 -0.02"/>
      <geometry>
        <box size="0.04 0.07 0.06"/>
      </geometry>
      <material name="dark_grey"/>
    </visual>
    
    <!-- Camera Module -->
    <visual>
      <origin xyz="0.20 0 -0.02"/>
      <geometry>
        <cylinder length="0.05" radius="0.024"/> <!-- Lens housing, rotated -->
      </geometry>
      <origin rpy="0 1.57 0" xyz="0 0 0"/> <!-- Make cylinder horizontal -->
      <material name="silver"/>
    </visual>
    
    <!-- Black Lens Glass -->
    <visual>
      <origin rpy="0 1.57 0" xyz="0.226 0 -0.02"/>
      <geometry>
        <cylinder length="0.01" radius="0.022"/>
      </geometry>
      <material name="lens_glass"/>
    </visual>


    <!-- === FRONT SENSORS === -->
    <visual> <origin xyz="0.164 0.05 0.03"/> <geometry><sphere radius="0.008"/></geometry> <material name="black"/> </visual>
    <visual> <origin xyz="0.164 -0.05 0.03"/> <geometry><sphere radius="0.008"/></geometry> <material name="black"/> </visual>

    <!-- === REAR LEDS === -->
    <visual> <origin xyz="-0.28 0.26 -0.02"/> <geometry><sphere radius="0.01"/></geometry> <material name="led_orange"/> </visual>
    <visual> <origin xyz="-0.28 -0.26 -0.02"/> <geometry><sphere radius="0.01"/></geometry> <material name="led_orange"/> </visual>

    <!-- Collision Geometry (Simplified Box) -->
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="0.7 0.7 0.2"/>
      </geometry>
    </collision>
  </link>

  <!-- === PROPELLERS (GOLDEN) === -->
  
  <!-- Prop 0: Front Right -->
  <link name="prop0_link">
    <inertial> <mass value="0.001"/> <origin xyz="0 0 0"/> <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/> </inertial>
    <visual> <geometry><box size="0.44 0.04 0.002"/></geometry> <material name="gold"/> </visual>
    <!-- Prop Hub Cap -->
    <visual> <origin xyz="0 0 0.004"/> <geometry><cylinder length="0.01" radius="0.01"/></geometry> <material name="silver"/> </visual>
  </link>
  <joint name="prop0_joint" type="continuous"> <parent link="base_link"/> <child link="prop0_link"/> <origin xyz="0.29 -0.27 0.08"/> <axis xyz="0 0 1"/> </joint>

  <!-- Prop 1: Front Left -->
  <link name="prop1_link">
    <inertial> <mass value="0.002"/> <origin xyz="0 0 0"/> <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/> </inertial>
    <visual> <geometry><box size="0.44 0.04 0.002"/></geometry> <material name="gold"/> </visual>
    <visual> <origin xyz="0 0 0.004"/> <geometry><cylinder length="0.01" radius="0.01"/></geometry> <material name="silver"/> </visual>
  </link>
  <joint name="prop1_joint" type="continuous"> <parent link="base_link"/> <child link="prop1_link"/> <origin xyz="0.29 0.27 0.08"/> <axis xyz="0 0 1"/> </joint>

  <!-- Prop 2: Rear Right -->
  <link name="prop2_link">
    <inertial> <mass value="0.002"/> <origin xyz="0 0 0"/> <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/> </inertial>
    <visual> <geometry><box size="0.44 0.04 0.002"/></geometry> <material name="gold"/> </visual>
    <visual> <origin xyz="0 0 0.004"/> <geometry><cylinder length="0.01" radius="0.01"/></geometry> <material name="silver"/> </visual>
  </link>
  <joint name="prop2_joint" type="continuous"> <parent link="base_link"/> <child link="prop2_link"/> <origin xyz="-0.29 -0.27 0.03"/> <axis xyz="0 0 1"/> </joint>

  <!-- Prop 3: Rear Left -->
  <link name="prop3_link">
    <inertial> <mass value="0.002"/> <origin xyz="0 0 0"/> <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/> </inertial>
    <visual> <geometry><box size="0.44 0.04 0.002"/></geometry> <material name="gold"/> </visual>
    <visual> <origin xyz="0 0 0.004"/> <geometry><cylinder length="0.01" radius="0.01"/></geometry> <material name="silver"/> </visual>
  </link>
  <joint name="prop3_joint" type="continuous"> <parent link="base_link"/> <child link="prop3_link"/> <origin xyz="-0.29 0.27 0.03"/> <axis xyz="0 0 1"/> </joint>

</robot>
