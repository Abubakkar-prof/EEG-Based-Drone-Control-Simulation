<?xml version="1.0" ?>
<robot name="tree">
  <material name="brown">
    <color rgba="0.6 0.4 0.2 1"/>
  </material>
  
  <material name="green_leaves">
    <color rgba="0.1 0.5 0.1 1"/>
  </material>

  <link name="base_link">
    <inertial>
      <mass value="0"/> <!-- Static object -->
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>

    <!-- Trunk -->
    <visual>
      <origin rpy="0 0 0" xyz="0 0 1"/> <!-- Centered so base is at z=0 -->
      <geometry>
        <cylinder length="2.0" radius="0.2"/>
      </geometry>
      <material name="brown"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 1"/>
      <geometry>
        <cylinder length="2.0" radius="0.2"/>
      </geometry>
    </collision>

    <!-- Foliage (Sphere) -->
    <visual>
      <origin rpy="0 0 0" xyz="0 0 2.5"/>
      <geometry>
        <sphere radius="1.2"/>
      </geometry>
      <material name="green_leaves"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 2.5"/>
      <geometry>
        <sphere radius="1.2"/>
      </geometry>
    </collision>
    
    <!-- Another Foliage Offset for irregularity -->
    <visual>
      <origin rpy="0 0 0" xyz="0.3 0.3 3.0"/>
      <geometry>
        <sphere radius="1.0"/>
      </geometry>
      <material name="green_leaves"/>
    </visual>
     <!-- Another Foliage Offset -->
    <visual>
      <origin rpy="0 0 0" xyz="-0.3 -0.2 3.2"/>
      <geometry>
        <sphere radius="0.9"/>
      </geometry>
      <material name="green_leaves"/>
    </visual>
  </link>
</robot>
